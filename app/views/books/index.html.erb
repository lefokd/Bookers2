<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
<div class="col-xs-3">
<%= render partial: 'users/info', locals: {user:@user , book:@book} %>
</div>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= link_to user_path(book.user.id) do%><%= attachment_image_tag book.user, :profile_image, size: "40x40", format:'jpeg', fallback: "no_image.jpg" %><% end %></td>
            <td><%= link_to book_path(book.id) do%><%= book.title  %>
            	<% end %></td>
            <td><%= book.body %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
  </div>
</div>

