
<div class="row">

<div class="col-xs-3">
<%= render partial: 'users/info', locals: {user:@user , book:@newbook} %>

</div>
 <div class="col-xs-9">
 <% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
   <h2>Book detail</h2>
   <table class = "table table hover">
    	<td><%= link_to user_path(@user.id) do%>
    		<%= attachment_image_tag @book.user, :profile_image, size: "40x40", format:'jpeg' , fallback: "no_image.jpg" %><%= @user.name %>
    		<% end %>
    		</td>
    	<td>
    		<%= link_to book_path(@book.id) do%>
    		<%= @book.title %>
    		<% end %>
    	</td>
    	<td><%= @book.body %></td>
    	<% if current_user == @user %>
    	<td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    	<td><%= link_to 'Destroy', book_path(@book.id) ,method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    	<% end %>
    </table>

  </div>
 </div>





