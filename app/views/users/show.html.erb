<div class="profile-container">
<div class="row">
   <% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>
<div class="col-xs-3">
<%= render partial: 'users/info', locals: {user:@user , book:@book} %>
</div>

<div class="body">
  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover">
      <thead>
        <tr>
        <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <% @user.books.each do |book| %>
        <tbody>
          <tr>
            <td><%= link_to user_path(book.user) do%>
            	<%= attachment_image_tag book.user, :profile_image, size: "40x40", format:'jpeg',fallback: "no_image.jpg" %>
            	<% end %></td>
            <td>
            	<%= link_to book_path(book.id) do%>
            	<%= book.title  %>
            	<% end %>
            </td>
            <td>
            	<%= book.body %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
</div>
</div>
</div>
</div>
